#
# ~/.bash_profile
#
PATH=$PATH:$HOME/bin
source /home/remeeh/.profile
export XENVIRONMENT="${HOME}/.Xresources"
[[ -f ~/.bashrc ]] && . ~/.bashrc
[[ -z $DISPLAY && $XDG_VTNR -eq 1 ]] && exec startx

[[ -s "$HOME/.rvm/scripts/rvm" ]] && source "$HOME/.rvm/scripts/rvm" # Load RVM into a shell session *as a function*
